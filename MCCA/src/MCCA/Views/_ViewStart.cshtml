@{
    var controller = this.ViewContext.RouteData.Values["controller"].ToString();
    string cLayout = "";
    if (controller == "Admin")
    {
        cLayout = "_AdminLayout";
    }
    else if(controller == "Director")
    {
        cLayout = "_DirectorLayout";
    }
    else if(controller == "Staff")
    {
        cLayout = "_StaffLayout";
    }
    else
    {
        cLayout = "_Layout";
    }
    Layout = cLayout;
}