@model MCCA.ViewModels.Admin.EditViewModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<form class="form-horizontal">
    @*Adding First name textfield*@
    <div class="form-group">
        <label asp-for="FirstName" class="col-sm-3">First Name:</label>
        <input asp-for="FirstName" class="form-control" value="@ViewData["firstName"].ToString()"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    @*Adding Last name textfield*@
    <div class="form-group">
        <label asp-for="LastName" class="col-sm-3">Last Name:</label>
        <input asp-for="LastName" class="form-control" value="@ViewData["lastName"].ToString()"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    @*@Adding a inline account type dropbox*@
    <div class="form-group">
        <div class="form-inline">
            <label asp-for="AccountType" class="col-sm-3">Account Type:</label>
            <select asp-for="AccountType" class="form-control">
                @if (ViewData["accountType"].ToString().Equals("Director"))
                {
                    <option>@ViewData["accountType"].ToString()</option>
                    <option>Staff</option>
                }
                else
                {
                    <option>@ViewData["accountType"].ToString()</option>
                    <option>Director</option>
                }
            </select>
        </div>
        <div class="col-sm-offset-3">
            <small class="text-muted">Example: Director, Staff</small>
        </div>
        <span asp-validation-for="AccountType" class="text-danger"></span>
    </div>
    @*Adding a inline center dropbox*@
    <div class="form-group">
        <div class="form-inline">
            <label asp-for="Center" class="col-sm-3">Center:</label>
            <select asp-for="Center" class="form-control" >
                <option>@ViewData["center"].ToString()</option>
                <option>Center1</option>
                <option>Center2</option>
            </select>
        </div>
        <div class="col-sm-offset-3">
            <small class="text-muted">Current centers in the database</small>
        </div>
        <span asp-validation-for="Center" class="text-danger"></span>
    </div>
    @*Adding email textfield*@
    <div class="form-group">
        <label asp-for="Email" class="col-sm-3">Email:</label>
        <input asp-for="Email" class="form-control" value="@ViewData["email"].ToString()"/>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="col-sm-offset-3">
            <small class="text-muted">Example: mesa@yahoo.com</small>
        </div>
    </div>
    @*Adding phone number textfield*@
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-sm-3">Phone Number:</label>
        <input asp-for="PhoneNumber" class="form-control" value="@ViewData["phoneNumber"].ToString()"/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <div class="col-sm-offset-3">
            <small class="text-muted">Example: 916-555-5555</small>
        </div>
    </div>
    @*Adding username textfield*@
    <div class="form-group">
        <label asp-for="Username" class="col-sm-3">Username:</label>
        <input asp-for="Username" class="form-control" value="@ViewData["userName"].ToString()"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    @*Adding password textfield*@
    <div class="form-group">
        <label asp-for="Password" class="col-sm-3">Password:</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="col-sm-offset-3">
            <small class="text-muted">Please use a combination of letters, numbers, symbols</small>
        </div>
    </div>
    @*Adding confirmation password textfield*@
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-sm-3">Confirm Password:</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    @*Adding add account button*@
    <div class="form-group">
        <button style="margin-left:15px" type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
