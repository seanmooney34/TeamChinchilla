<h2>Add Account</h2>
<form class="form-horizontal">
    @*Adding First name textfield*@
    <div class="form-group">
        <label class="col-sm-3" for="FirstName" >First Name:</label>
        <input type="text" id="FirstName">
    </div>
    @*Adding Last name textfield*@
    <div class="form-group">
        <label class="col-sm-3" for="LasttName">Last Name:</label>
        <input type="text" id="LastName">
    </div>
    @*@Adding a inline account type dropbox*@
 
        <div class="form-group">
            <div class="form-inline">
            <label class="col-sm-3" for="selDropBox1">Select Account Type: </label>
            <select class="form-control" id="selDropBox1">
                <option></option>
                <option>Director</option>
                <option>Staff</option>
            </select>
            </div>
        </div>
  
    @*Adding a inline center dropbox*@
    <div class="form-group">
        <div class="form-inline">
            <label class="col-sm-3" for="selDropBox2">Select Center:</label>
            <select class="form-control" id="selDropBox2">
                <option></option>
                <option>Center1</option>
                <option>Center2</option>
            </select>
        </div>
    </div>
    @*Adding email textfield*@
    <div class="form-group">
        <label class="col-sm-3" for="Email:">Email:</label>
        <input type="text" id="Email">
    </div>
    @*Adding phone number textfield*@
    <div class="form-group">
        <label class="col-sm-3" for="PhoneNumber">Phone Number:</label>
        <input type="text" id="PhoneNumber">
    </div>
    @*Adding username textfield*@
    <div class="form-group">
        <label class="col-sm-3" for="Username">Username:</label>
        <input type="text" id="Username">
    </div>
    @*Adding password textfield*@
    <div class="form-group">
        <label class="col-sm-3" for="Password">Password:</label>
        <input type="text" id="Password">
    </div>
</form>
@*Adding add account and back buttons*@
<fieldset>
    @*Adding a create account button that will add the new account to the database*@
    <button type="submit" value="Create Account" onclick="location.href='@Url.Action("Index", "Admin")'" class="btn btn-primary">Create</button>
    @*Adding a back button that takes user to the ManageAccounts content page*@
    <button type="submit" value="Back" onclick="location.href='@Url.Action("ManageAccounts", "Admin")'" class="btn btn-primary">Back</button>
</fieldset>
